<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.quote.cowtit.Activity.Register">


    <ImageView
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/logo" />

    <EditText
        android:userId="@+userId/reg_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15sp"
        android:background="@drawable/edit_shap"
        android:hint="Enter Email Id"
        android:inputType="textEmailAddress"
        android:padding="10sp" />

    <EditText
        android:userId="@+userId/reg_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15sp"
        android:background="@drawable/edit_shap"
        android:hint="Name"
        android:inputType="text"
        android:padding="10sp" />

    <EditText
        android:userId="@+userId/reg_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15sp"
        android:background="@drawable/edit_shap"
        android:hint="User Name"
        android:inputType="text"
        android:padding="10sp" />

    <EditText
        android:userId="@+userId/reg_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15sp"
        android:background="@drawable/edit_shap"
        android:hint="Phone Number"
        android:inputType="phone"
        android:maxLength="10"
        android:padding="10sp" />

    <android.support.design.widget.TextInputLayout
        android:userId="@+userId/etPassLaysigin1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20sp"
        app:hintEnabled="false"
        app:passwordToggleEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:userId="@+userId/reg_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_shap"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:padding="10sp" />
    </android.support.design.widget.TextInputLayout>

    <!--<EditText-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_marginLeft="30dp"-->
    <!--android:layout_marginRight="30dp"-->
    <!---->
    <!--android:layout_marginTop="15sp"-->
    <!--android:hint=""-->
    <!--android:inputType="textPassword"-->
    <!--android:background="@drawable/edit_shap"-->
    <!--android:padding="10sp" />-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:weightSum="2">

        <Button
            android:userId="@+userId/btn_register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"

            android:layout_weight="1"
            android:background="@drawable/buttonshap"
            android:text="Register"
            android:textColor="@color/white" />

        <Button
            android:userId="@+userId/btn_reg_cencl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:background="@drawable/buttonshap"

            android:text="cancel"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>