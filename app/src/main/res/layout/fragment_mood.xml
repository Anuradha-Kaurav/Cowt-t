<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="Fragment.SubFragment.AllFragment">
    <!--<SearchView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:padding="5dp"-->
        <!--android:background="#ececec"></SearchView>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/theamcolor"
        android:weightSum="2">
        <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:id="@+id/ser_mood"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edit_shap2"
            android:inputType="text|textNoSuggestions"
            android:layout_marginLeft="20dp"
            android:layout_weight="1.7"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:id="@+id/btn_ser_mood"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="-50dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:background="@drawable/ic_search"/>


    </LinearLayout>


    <android.support.v7.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:id="@+id/list_mood">
</android.support.v7.widget.RecyclerView>
</LinearLayout>
